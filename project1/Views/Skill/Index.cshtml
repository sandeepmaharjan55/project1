@model IEnumerable<project1.Models.Skill>

@{
    ViewBag.Title = "Skill Manager";
}

<br/>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"><span class="glyphicon glyphicon-thumbs-up"></span> Admin Dashboard</h3>
            </div>
            <div class="panel-body">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Skills)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Skills)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.SkillId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.SkillId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.SkillId })
                            </td>
                        </tr>
                    }

                </table>
                </div>
            </div>
        </div>
    </div>
